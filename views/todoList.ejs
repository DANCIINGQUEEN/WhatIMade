// //button.addEventListener(어떤이벤트, 어떤기능)
// button.addEventListener('click', function(e){
//     e.preventDefault(); //새로고침 방지
//     console.log(e.target)
// })
button.addEventListener('click', onSubmit)
const todoInput=document.querySelector('#todo-input');

function onSubmit(e){
    e.preventDefault();
    if(todoInput.value===''){ return;}  //빈칸입력하면 무시되도록
    const li=document.createElement('li');  //li요소 받아오기
    li.appendChild(document.createTextNode(todoInput.value));   //input value받기
    //console.log(todoInput.value);
    //console.log(li);
    li.classList.add('item');   //li 에 item클래스 포함
    todos.appendChild(li); //li에 input넣기
    todoInput.value=''; //save하면 빈칸으로 만들기
}  
    </script>
</body>
